pipeline {
    agent {
        label 'ubuntuNode1'
    }
    stages {
        stage('pre -build') {
            steps {
                sh 'echo Pre-build'
            }
        }
        stage('build and Deploy') {
            steps {
                echo "Hello"
                script {
                        try {
                            sh 'docker stop hello'
                        } catch (Exception e) {
                            echo 'Exception occurred'
                        }
                        try {
                            sh 'docker rm hello'
                        } catch (Exception e) {
                            echo 'Exception occurred'
                        }
                        try{
                            sh 'docker image rm -f kamal'
                        } catch (Exception e) {
                            echo 'Exception occurred'
                        }
                        sh '''
                        mv index.html $(pwd)/ci/index.html
                        docker build -t kamal $(pwd)/ci
                        docker run -td --name hello -p 80:80 kamal
                        '''
                    }
                }
        }
        stage('Unit tests') {
            steps {
                sh 'echo Running unit tests'
            }
        }
        stage('Regression tests') {
            steps {
                parallel(
                    chrome : {
                        sh 'echo Running E2E tests on chrome'
                    },
                    firefox : {
                        sh 'echo Running E2E tests on chrome'
                    },
                    safari : {
                        sh 'echo Running E2E tests on chrome'
                    }
                )
                
            }
        }
        stage('Release to prod') {
            steps {
                sh 'echo Releasing to prod'
            }
        }
    }
 post {
        always {
            echo 'Cleanup after everything!'
        }
    }
}